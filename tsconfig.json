{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSourceMap": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "references": [
    { "path": "./packages/checker" },
    { "path": "./packages/creator" },
    { "path": "./packages/cleaner" },
    { "path": "./packages/helper" },
    { "path": "./packages/modifier" },
    { "path": "./packages/types" }
  ]
}
